# ----------------------------------------------------------------------
# เปิด PHP ให้รัน .php ไฟล์
# ----------------------------------------------------------------------
<IfModule mime_module>
    AddType application/x-httpd-php .php
</IfModule>

# ถ้า host ใช้ handler เก่า ให้ uncomment อันนี้
# AddHandler application/x-httpd-php .php

# ----------------------------------------------------------------------
# กำหนด default index
# ----------------------------------------------------------------------
DirectoryIndex index.php index.html

# ----------------------------------------------------------------------
# เปิดการ rewrite (ใช้ได้ในอนาคตถ้าจะทำ pretty URL)
# ----------------------------------------------------------------------
<IfModule mod_rewrite.c>
  RewriteEngine On
  # ตัวอย่าง: redirect www → non-www
  # RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
  # RewriteRule ^(.*)$ https://%1/$1 [L,R=301]
</IfModule>

# ----------------------------------------------------------------------
# Security เบื้องต้น
# ----------------------------------------------------------------------
# ห้าม list directory
Options -Indexes

# ป้องกันการเข้าถึงไฟล์ config โดยตรง
<FilesMatch "config\.php$">
  Order allow,deny
  Deny from all
</FilesMatch>

# ป้องกันการเข้าถึงไฟล์ .htaccess เอง
<Files ".htaccess">
  Order allow,deny
  Deny from all
</Files>
